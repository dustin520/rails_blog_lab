<h1>Comments#show</h1>
<p>Find me in app/views/comments/show.html.erb</p>




	<div class="container">
		<div class="row">
			<div class="col-xs-offset-4 col-xs-4">
			<h2><%= @post.author %></h2> <br>
			<p><%= @post.description %></p>
			</div>
		</div>
	
		<div class="row">
			<div class="col-xs-offset-4 col-xs-4">
			<% @comments.each do |comment| %>
				<h2><%= comment.name %></h2>
				<h3><%= comment.title %></h3>
				<p><%= comment.description %></p>
			<% end %>
			</div>		
		</div>
				
			

	</div>