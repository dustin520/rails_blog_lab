<div class="container">
	
	<h2>Posts filtered by Tag</h2>
		

	<div class="jumbotron">
	
	<button type="button" class="btn btn-warm btn-lg"><a href="posts/new">Post New</a></button>

		<div class="row">
			
			<% @tags.each do |tag| %>
				<div class="col-md-6">
					<h3>#<%= tag.name %></h3>
					

						<p> <%= tag.posts.map(&:title).join %> by <%= tag.posts.map(&:author).join %></p>

				</div>

			<% end %>

		</div>

	</div>

</div>